@model MeasurementListViewModel

@{
    int i = 1;
}

<h1>Lista ostatnich pomiarów</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Data pomiaru</th>
      <th scope="col">Bmi</th>
      <th scope="col">Klasyfikacja</th>
      <th scope="col">Opis</th>
    </tr>
  </thead>
  <tbody>

        @foreach (var item in Model.MeasurementList)
        {
        <tr>
          <th scope="row">@(i++)</th>
          <td>@item.Date.ToShortDateString()</td>
          <td>@item.Bmi</td>
          <td>@item.BmiClassification.ToString()</td>
          <td>@item.Summary</td>
        </tr>
        }

  </tbody>
</table>